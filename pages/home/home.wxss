.btn-box{
  display: flex;
  position: absolute;
  width: 100%;
  bottom: 50px;
  justify-content: space-around;
}
.btn-box cover-image{
  width: 50px;
  height: 50px;
}
.rechoose{
  position: fixed;
  bottom: 60px;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0px 1px 5px #666;
}
.faceInfo_box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 200px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 5px;
  box-shadow: 0 3px 10px white;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.face_row{
  display: flex;
  justify-content: space-around;
}